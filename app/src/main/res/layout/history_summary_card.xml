<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- The view shown as a recycleview item  to describe a previous workout-->

    <TextView
        android:id="@+id/histSum_splitName_TextView"
        android:text="split"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/histSum_dayName_TextView"
        android:text="day"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/histSum_date_TextView"
        android:text="date"
        android:layout_weight="1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>